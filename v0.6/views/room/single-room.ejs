		<div class="container">
			<%- include('../includes/feedback-messages.ejs') %>
			<div class="row" style="background-color: #fed136">
				<div class="col-lg-4 text-center">
				</div>
				<div class="col-lg-4 text-center">
					<h1><%= room.name %></h1>
				</div>
				<div class="col-lg-2 text-center">
				</div>
				<div class="col-lg-2 text-center mt-2">
					<% if (isAuthenticated > 0) { %>
						<form action="/leave-room-request" method="POST">
							<button type="submit">Leave room</button>
							<input type="hidden" name="roomId" value="<%= room.id %>" readonly>
							<input type="hidden" name="latestLeave" value="<%= room.latestLeave %>" readonly>
							<input type="hidden" name="_csrf" value="<%= csrfToken %>">
						</form>
					<% } %>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12 text-center">
					<hr />
				</div>
			</div>

			<% if (allGames && allGames.length > 0) { %>

			<div class="row">
				<div class="col-lg-12 text-center">
					<h3>All Games</h3>
				</div>
			</div>


			<div class="row mt-5">
				<div class="col-lg-1 text-center">
				</div>
				<div class="col-lg-3 text-center">
					<h4>Home team</h4>
				</div>
				<div class="col-lg-1 text-center">
					<h4>-</h4>
				</div>
				<div class="col-lg-3 text-center">
					<h4>Away team</h4>
				</div>
				<div class="col-lg-3 text-center">
					<h4>Prediction</h4>
				</div>
				<div class="col-lg-1 text-center">
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12 text-center">
					<hr>
				</div>
			</div>

			<% for (let game of allGames) { %>
			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="row">
						<div class="col-lg-1 text-center">
						</div>

						<div class="col-lg-3 text-center">
							<%= game.team1 %>
						</div>

						<div class="col-lg-1 text-center">
							-
						</div>

						<div class="col-lg-3 text-center">
							<%= game.team2 %>
						</div>

						<div class="col-lg-3 text-center">
							<% if (roomUser) { %>
							<form action="/make-prediction" method="POST">
								<input type="submit" name="button" value="1">
								<input type="submit" name="button" value="X">
								<input type="submit" name="button" value="2">
								<input type="hidden" name="roomId" value="<%= room.id %>">
								<input type="hidden" name="gameId" value="<%= game.id %>">
								<input type="hidden" name="_csrf" value="<%= csrfToken %>">
							</form>
							<% } %>
						</div>
						<div class="col-lg-1 text-center">
						</div>
					</div>
				</div>
			</div>
			<% } %>
			<% } else { %>
			<div class="row">
				<div class="col-lg-12 text-center">
					<h3>No games in this room</h3>
				</div>
			</div>
			<% } %>

			<div class="row">
				<div class="col-lg-12 text-center">
					<hr>
				</div>
			</div>


			<% if (userRooms) { %>
			<div class="row mt-5">
				<div class="col-lg-1 text-center">
				</div>
				<div class="col-lg-3 text-center">
					<h3> Position </h3>
				</div>
				<div class="col-lg-4 text-center">
					<h3> Player name </h3>
				</div>
				<div class="col-lg-3 text-center">
					<h3> Points </h3>
				</div>
				<div class="col-lg-1 text-center">
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12 text-center">
					<hr>
				</div>
			</div>

			<% for (let i = 0; i < userRooms.length; i++) { %>
			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="row">
						<div class="col-lg-1 text-center">
						</div>
						<div class="col-lg-3 text-center">
							<h4> <%= i+1 %>. </h4>
						</div>
						<div class="col-lg-4 text-center">
							<h4> <%= leaderboardUsers[i].username %> </h4>
						</div>
						<div class="col-lg-3 text-center">
							<h4> <%=userRooms[i].points%> points </h4>
						</div>
						<div class="col-lg-1 text-center">
						</div>
					</div>
				</div>
			</div>
			<% } %>
			<% } else { %>
			<div class="row">
				<div class="col-lg-12 text-center">
					<h4>No users in this room!</h4>
				</div>
			</div>
			<% } %>

			<div class="row">
				<div class="col-lg-12 text-center">
					<hr>
				</div>
			</div>



			<% if (pendingUsers.length > 0) { %>
			<div class="row">
				<div class="col-lg-2 text-center">
				</div>
				<div class="col-lg-8 text-center">
					<h1> Accept/Reject new users </h1>
				</div>
				<div class="col-lg-2 text-center">
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12 text-center">
					<hr>
				</div>
			</div>

			<div class="row mt-2 ">
				<div class="col-lg-3 text-center">
				</div>
				<div class="col-lg-4 text-center">
					<h4> Username : </h4>
				</div>
				<div class="col-lg-2 text-center">
					<h4> Action : </h4>
				</div>
				<div class="col-lg-3 text-center">
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12 text-center">
					<hr>
				</div>
			</div>

			<% for (let i = 0; i < pendingUsers.length; i++) { %>
			<div class="row mt-2">
				<div class="col-lg-3 text-center">
				</div>
				<div class="col-lg-4 text-center">
					<h5><%= pendingUsers[i].username %></h5>
				</div>
				<div class="col-lg-2 text-center">
					<form action="/handle-request" method="POST">
						<input type="submit" name="button" value="Accept">
						&nbsp; | &nbsp;
						<input type="submit" name="button" value="Reject">
						<input type="hidden" name="roomId" value="<%= room.id %>">
						<input type="hidden" name="userId" value="<%= pendingUsers[i].id %>">
						<input type="hidden" name="_csrf" value="<%= csrfToken %>">
					</form>
				</div>
				<div class="col-lg-3 text-center">
				</div>
			</div>
			<% } %>
			<% } %>

		</div>
	<%- include('../includes/end.ejs') %>