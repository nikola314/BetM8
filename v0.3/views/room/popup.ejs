
<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <h1><%= message %></h1>
        <h2>Are you sure you want to leave the room?</h2>
        <form action="/leave-room" method="POST">
            <input type="submit" name="button" value="Yes">
            <input type="submit" name="button" value="No">
            <input type="hidden" name="refund" value="<%= refund %>" readonly>
            <input type="hidden" name="roomId" value="<%= room.id %>" readonly>          
            <input type="hidden" name="latestLeave" value="<%= room.latestLeave %>" readonly>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
    </main>
    <%- include('../includes/end.ejs') %>