<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <br/><br/><br/><br/>

            <main>
                <% if (currentUser) { %>
                    <div class="centered">
                        <h1>Choose payment method</h1>
                        <form action="/user-profile" method="POST">
                            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="pk_test_JNWzJUeoSSaC4Ypl6NpB5O9I00jPfufxJn" data-amount="<%= money * 100 %>" data-name="<%= type %> money" data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                                data-locale="auto" data-currency="rsd">
                            </script>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input type="hidden" name="type" value="<%=type%>">
                        </form>
                    </div>
                    <% } else { %>
                        <h1>No user!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>